@{
    ViewData["Title"] = "Restaurant Review";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Write a new Review</title>
</head>
<body>
    @model REST
    <h1><u>Add A New Review</u></h1>
    <form action="Create" method="POST">
        <div class="form-row">
            <div class="form-group col-md-8">
            <label for="ReviewName">Reviewer Name: </label>
            <span asp-validation-for="Name"></span>
            <input type="text" class="form-control" id="ReviewName" asp-for="Name">
            </div>
        </div>
        <div class="form-group col-md-8">
            <label for="Restaurant">Restaurant: </label>
            <input type="text" class="form-control" id="Restaurant" asp-for="Restaurant">
        </div>
        <div class="form-group col-md-8">
            <label for="review">Review : </label>
            <textarea class="form-control" id="review" rows="3" asp-for="Review"></textarea>
        </div>        
        <div class="form-group col-md-8">
            <label for="Visit">Date of visit: </label>
            <input type="date" class="form-control" id="Visit" asp-for="Visit">
        </div>
        <select class="form-control" asp-for="Rate">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
        </select>
        <button type="submit" class="btn btn-outline-dark">Submit</button>
    </form>
</body>
</html>
