@{
    ViewData["Title"] = "About";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Restaurants</title>
</head>
<body>
    @{foreach(REST rest in ViewBag.Reviews)
    {
    <div class="jumbotron">
        <h2 class="display">Review for: @rest.Restaurant  Rate: @rest.Rate</h2>
        <h2 class="display">Reviewer: @rest.Name , @rest.Visit.ToString("MMM dd,yyyy")</h2>
        <p>@rest.Review</p>
        <form action="helpful" method="POST">
            <a class="btn btn-outline-primary btn-lg" href="/" value="helpful" role="button">Helpful</a>
            <a class="btn btn-outline-danger btn-lg" href="/" value="notHelpful"role="button">Not Helpful</a>
        </form>
        <hr class="my-4">       
    </div>
    }}
    <a class="btn btn-outline-secondary" href="/" role="button">New Review</a>
</body>
</html>