@{
ViewData["Title"] = "About";
}
@model User
<div class="jumbotron pt-5">
    <header class="heading"> Login</header>
    <hr>
    <form class="form" asp-action="login" asp-controller="Home" method="post">
        <div class="row">
            <div class="col-xs-4">
                <label class="mail">Email :</label></div>
            <div class="col-xs-8">
                <span asp-validation-for="Email"></span>
                <input asp-for="Email" type="email" name="email" id="email" placeholder="Enter your email" class="form-control">
            </div>
        </div>


        <div class="row">
            <div class="col-xs-4">
                <label class="pass">Password :</label></div>
            <div class="col-xs-8">
                <span asp-validation-for="Password"></span>
                <input asp-for="Password" type="password" name="password" id="password" placeholder="Enter your Password"
                    class="form-control">
            </div>
        </div>
        <div class="col-sm-12">
            <button type="submit" class="btn btn-success">Login</button>
        </div>
    </form>
</div>